                        </div>
                    </div>
                </div>


                <div id="Mobile">
                    <h1>Mobile Servicing</h1>
                    <div class="panel panel-default" style="text-align:center; font-size:xx-large">

                        <img class="img-thumbnail" src="~/Image/mservicing.png" alt="Chania">
                        <div>
                            @Html.ActionLink("Mobie Service", "MobileServicing")
                        </div>
                    </div>
                </div>


                <div id="Microwave">
                    <h1>Microwave Servicing</h1>
                    <div class="panel panel-default" style="text-align:center; font-size:xx-large">

                        <img class="img-thumbnail" src="~/Image/MicServicing.png" alt="Chania">
                        <div>
                            @Html.ActionLink("Microwave Service", "MicrowaveServicing")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="font-size:xx-large;text-align:center">
