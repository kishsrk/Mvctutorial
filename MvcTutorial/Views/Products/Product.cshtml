
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome to Product</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body data-spy="scroll" data-target="#myScrollspy" data-offset="20">
    <div style="background-color:cornflowerblue;text-align:center">
        <div class="jumbotron text-center">
            <h1>Products Page</h1>
        </div>
    </div>

        <div class="container">
            <div class="row">
                <nav class="col-sm-3" id="myScrollspy">
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="#Laptop">Laptop</a></li>
                        <li><a href="#Tv">TV</a></li>
                        <li><a href="#Mobile">Mobile</a></li>
                        <li><a href="#Microwave">Microwave</a></li>
                    </ul>
                </nav>
                <div class="col-sm-9">
                    <div id="Laptop">
                        <h1>Laptop</h1>                      
                        <div class="panel panel-default" style="text-align:center; font-size:xx-large">

                            <img class="img-thumbnail" src="~/Image/laptop.jpg" alt="Chania">
                            <div>
                                @Html.ActionLink("Laptop Section", "Laptop")
                            </div>
                         </div>
                        </div>


                    <div id="Tv">
                        <h1>Telivision</h1>
                        <div class="panel panel-default" style="text-align:center; font-size:xx-large">

                            <img class="img-thumbnail" src="~/Image/tv.png" alt="Chania">
                            <div>
                                @Html.ActionLink("TV Section", "TV")
                            </div>
                        </div>
                        </div>


                    <div id="Mobile">
                        <h1>Mobile</h1>
                        <div class="panel panel-default" style="text-align:center; font-size:xx-large">

                            <img class="img-thumbnail" src="~/Image/mobile.png" alt="Chania">
                            <div>
                                @Html.ActionLink("Mobile Section", "Mobile")
                            </div>
                        </div>
                      </div>


                    <div id="Microwave">
                        <h1>Microwave</h1>
                        <div class="panel panel-default" style="text-align:center; font-size:xx-large">

                            <img class="img-thumbnail" src="~/Image/microwave.png" alt="Chania">
                            <div>
                                @Html.ActionLink("Microwave Section", "Microwave")
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>

    <div style="font-size:xx-large;text-align:center">
        @Html.ActionLink("Go to Home", "Index", "Home")
    </div>

   
</body>
</html>
